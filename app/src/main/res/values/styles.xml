<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.Button" />

    <style name="Widget.Button.Circle">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>
    </style>

    <style name="Widget.Button.Circle.Portrait">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Widget.Button.Circle.Portrait.Number">
        <item name="android:backgroundTint">@color/action_2</item>
    </style>

    <style name="Widget.Button.Circle.Portrait.Operation">
        <item name="android:backgroundTint">@color/action_3</item>
    </style>

    <style name="Widget.Button.Circle.Portrait.More">
        <item name="android:backgroundTint">@color/action_1</item>
    </style>

    <style name="Widget.Button.Circle.Portrait.Number.TwoRows">
        <item name="android:layout_width">186dp</item>
        <item name="android:backgroundTint">@color/action_2</item>
    </style>

    <style name="Widget.Button.Circle.Landscape">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Widget.Button.Circle.Landscape.Number">
        <item name="android:backgroundTint">@color/action_2</item>
    </style>

    <style name="Widget.Button.Circle.Landscape.Operation">
        <item name="android:backgroundTint">@color/action_3</item>
    </style>

    <style name="Widget.Button.Circle.Landscape.More">
        <item name="android:backgroundTint">@color/action_1</item>
    </style>

    <style name="Widget.Button.Circle.Landscape.Number.TwoRows">
        <item name="android:layout_width">146dp</item>
        <item name="android:backgroundTint">@color/action_2</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>